{% extends "base.html.twig" %}

{% block content %}
<div class="row">
  <div class="col-sm-3 col-md-3"></div>
  <div class="col-sm-6 col-md-6">
    <form class="form-signin" role="form" action="{{ root_path }}/idea/add" method="post">
      <h2 class="form-signin-heading">Nouvelle idée</h2>
      <input type="text" name="title" class="form-control" placeholder="Titre" required autofocus>
      <textarea name="desc" class="form-control" rows="3" placeholder="Description de l'idée..." required></textarea>
      <button class="btn btn-lg btn-primary btn-block" type="submit" style="margin-top:20px;">Créer</button>
    </form>
  </div>
  <div class="col-sm-3 col-md-3"></div>
</div>
{% endblock %}