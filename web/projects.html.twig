{% extends "base.html.twig" %}

{% block content %}
    <div class="row">
      <h3>Liste des projets <button class="btn" style="margin-left:10px;"><span class="glyphicon glyphicon-plus"></span> Nouveau</button></h3>
      <div class="list-group">
      {% for p in projects %}
        <a href="#" class="list-group-item">
          <h4 class="list-group-item-heading">{{ p.titre }} <span class="badge badge-success">0/5</span></h4>
          <p class="list-group-item-text">
            {{ p.desc_travail }}
          </p>
          <p style="margin-top:10px;"><span class="label">Robotique</span> <span class="label">Réalité virtuelle</span></p>
        </a>
      {% endfor %}
      </div>
    </div>
{% endblock %}