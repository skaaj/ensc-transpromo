{% extends "base.html.twig" %}

{% block content %}
	<div class="row">
		<div class="col-sm-8 col-md-8">
			<div class="jumbotron">
				<div class="jumbotron-contents">
					<h1 style="margin-top:0px;">Bienvenue !</h1>
					<h2>Projet transpromo</h2>
					<p>Explication du projet transpromo.</p>
					<h2>Comment utiliser ce site</h2>
					<p>Explication du site.</p>
				</div>
			</div>
		</div>
		<div class="col-sm-4 col-md-4 well">
			<form class="form-signin" role="form">
        <h3 class="form-signin-heading">Inscription rapide</h3>
        <input type="email" class="form-control" placeholder="Email" required autofocus>
        <input type="password" class="form-control" placeholder="Mot de passe" required>
        <button class="btn btn-primary btn-block" type="submit">S'inscrire</button>
      </form>
		</div>
	</div>
	<div class="row">
	  <div class="col-sm-6 col-md-6">
	    <div class="thumbnail">
	      <div class="caption">
	        <h3>Consulter les projets</h3>
	        <p>Vous trouverez dans cette section la liste des projets disponibles.</p>
	        <p><a href="#" class="btn btn-primary" role="button">Accéder</a></p>
	      </div>
	    </div>
	  </div>
		<div class="col-sm-6 col-md-6">
	    <div class="thumbnail">
	      <div class="caption">
	        <h3>Consulter les idées</h3>
	        <p>Vous trouverez dans cette section la liste des idées.</p>
	        <p><a href="#" class="btn btn-primary" role="button">Accéder</a></p>
	      </div>
	    </div>
	  </div>
	</div>
	<div class="row" style="margin-bottom:40px;">
		<div class="col-sm-8 col-md-8">
			<div class="list-group">
			{% for info in data.informations %}
        <a href="#" class="list-group-item">
          <h4 class="list-group-item-heading">{{ info.titre }}</h4>
          <p class="list-group-item-text">{{ info.contenu }}</p>
        </a>
      {% endfor %}
      </div>
    </div>
    <div class="col-md-4">
      <h4>Dates limites</h4>
      <ul class="list-group">
        {% for date in data.deadlines %}
          <li class="list-group-item"><span class="badge">{{ date.date_lim }}</span>{{ date.titre }}</li>
        {% endfor %}
      </ul>
    </div>
	</div>
{% endblock %}
