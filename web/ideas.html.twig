{% extends "base.html.twig" %}

{% block content %}
    <div class="row">
      <h3>Boîte à idées <a href="{{ root_path }}/idea/add" class="btn btn-primary" style="margin-left:10px;"><span class="glyphicon glyphicon-plus"></span> Nouvelle</a></h3>
      <div class="list-group">
      {% for i in ideas %}
        <div class="list-group-item">
          <h4 class="list-group-item-heading">{{ i.titre }}</h4>
          <p class="list-group-item-text">
            {{ i.resume }}
          </p>
          {% if user.qualite > 1 %}
            <p style="margin-top:10px;">
              <button class="btn btn-info btn-sm disabled">Créer le projet associé</button>
            </p>
          {% endif %}
        </div>
      {% endfor %}
      </div>
    </div>
{% endblock %}